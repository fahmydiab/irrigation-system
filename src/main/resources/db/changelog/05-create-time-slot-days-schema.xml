<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

  <changeSet id="05" author="Fahmy">
    <comment>Create Time Slot Days table</comment>
    <createTable tableName="time_slot_days">
      <column name="id" type="bigint" autoIncrement="true" incrementBy="1" startWith="1">
        <constraints nullable="false" primaryKey="true" primaryKeyName="time_slot_days_pk"/>
      </column>
      <column name="time_slot_id" type="int">
        <constraints nullable="false" referencedTableName="time_slots" foreignKeyName="id"/>
      </column>
      <column name="status" type="varchar(256)">
        <constraints nullable="false"/>
      </column>
      <column name="time_slot_day" type="timestamp">
        <constraints nullable="false"/>
      </column>
      <column name="created_date" type="timestamp">
      </column>
      <column name="last_modified_date" type="timestamp">
      </column>
    </createTable>
    <addForeignKeyConstraint constraintName="time_slot_days_fk"
                             baseTableName="time_slot_days" baseColumnNames="time_slot_id"
                             referencedTableName="time_slots" referencedColumnNames="id"/>

  </changeSet>
</databaseChangeLog>
